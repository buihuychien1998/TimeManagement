<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@drawable/side_menu_item_phone"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/side_menu_padding"
    android:paddingRight="@dimen/side_menu_padding" >

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true"
        android:gravity="left|center_vertical"
        android:layout_toLeftOf="@+id/txtTime"
        android:layout_marginRight="10dp"
        android:singleLine="false"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/create_new_timer"
        android:textColor="@android:color/white"
        android:textSize="@dimen/side_menu_text" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/create_new_timer"
        android:textColor="@android:color/white"
        android:textSize="@dimen/side_menu_text" />

</RelativeLayout>